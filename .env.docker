# Node Environment
NODE_ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=3000
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/kitab"
DATABASE_CONNECTION_LIMIT=10

# Logging Configuration
LOG_LEVEL=info
SQL_LOG_LEVEL=info

# Rate Limiting
COMMON_RATE_LIMIT_MAX_REQUESTS=1000
COMMON_RATE_LIMIT_WINDOW_MS=1000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
AUTH_RATE_LIMIT_WINDOW_MS=900000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-different-from-jwt
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=bookshelf-api
JWT_AUDIENCE=bookshelf-users

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production-minimum-32-chars
SESSION_NAME=bookshelf-session
SESSION_MAX_AGE=86400000

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_SESSION_PREFIX=sess:

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_RESET_EXPIRES=3600000
EMAIL_VERIFICATION_EXPIRES=86400000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Two-Factor Authentication
TWO_FA_ISSUER=Bookshelf API
TWO_FA_WINDOW=2

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@bookshelf-api.com
EMAIL_FROM_NAME=Bookshelf API

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=/auth/google/callback

# OAuth - Apple
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=
APPLE_CALLBACK_URL=/auth/apple/callback

# External APIs
ISBNDB_API_KEY=

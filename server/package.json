{
  "name": "server",
  "version": "1.0.14",
  "description": "",
  "author": "Mahmoud Abdelhadi",
  "repository": "mahmoudabdelhadii/kitab",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint . --max-warnings 0 --cache",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "lint-all": "eslint . --max-warnings 0",
    "fmt": "prettier . --write --cache",
    "fmt:check": "prettier . --check",
    "check": "tsc --noEmit",
    "clean": "tsc --build --clean",
    "generate-swagger": "NODE_ENV=test tsx -r dotenv/config src/api-docs/exportOpenApi.ts",
    "generate-types": "npx swagger-typescript-api generate --path ./swagger.json --output src/common/types/shared/ --name isbndbApi.ts",
    "build": "tsc --build .",
    "start": "node build/src/index.js",
    "test": "vitest run",
    "test:auth": "tsx src/tests/auth-test-runner.ts",
    "test:auth-integration": "tsx src/tests/auth-integration.test.ts",
    "test:auth-unit": "vitest run src/common/auth src/api/auth src/common/middleware/__tests__/auth.test.ts src/common/middleware/__tests__/authorization.test.ts src/common/utils/__tests__/password-security.test.ts",
    "test:redis": "tsx src/tests/redis-test-runner.ts",
    "test:redis-connection": "tsx src/tests/redis-connection.test.ts",
    "test:redis-integration": "tsx src/tests/session-middleware.integration.test.ts",
    "dev": "nodemon",
    "export": "NODE_ENV=test tsx -r dotenv/config src/private/export.ts"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-apple": "^2.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "bcryptjs": "^3.0.2",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pino-http": "^10.0.0",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.5.6",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/express-validator": "^2.20.33",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@vitest/coverage-v8": "3.2.0",
    "globals": "^15.11.0",
    "globstar": "^1.0.0",
    "nodemon": "^3.0.3",
    "pino-pretty": "^11.0.0",
    "rimraf": "^6.0.0",
    "sql-formatter": "^15.3.1",
    "supertest": "^7.0.0",
    "swagger-typescript-api": "^13.0.28",
    "tsup": "^8.0.2",
    "tsx": "^4.19.0",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.0"
  },
  "engines": {
    "node": "^v22.9.0",
    "npm": "^10.8.3"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  }
}

{
  "name": "server",
  "version": "1.0.14",
  "description": "",
  "author": "Mahmoud Abdelhadi",
  "repository": "mahmoudabdelhadii/kitab",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint . --max-warnings 0 --cache && xss-scan",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "lint-all": "eslint . --max-warnings 0",
    "fmt": "prettier . --write --cache",
    "fmt:check": "prettier . --check",
    "check": "tsc --noEmit",
    "clean": "tsc --build --clean",
    "build": "tsc --build .",
    "start": "node build/src/index.js",
    "test": "ENV=test globstar -- tsx --test 'src/**/*.test.ts'",
    "dev": "nodemon",
    "export": "NODE_ENV=test tsx -r dotenv/config src/private/export.ts"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "pino-http": "^10.0.0",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "drizzle-kit": "^0.24.2",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^11.0.0",
    "rimraf": "^6.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.0",
    "nodemon": "^3.0.3",
    "sql-formatter": "^15.3.1"
  },
  "engines": {
    "node": "^v22.9.0",
    "npm": "^10.8.3"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}

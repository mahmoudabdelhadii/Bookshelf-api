{
  "extends": "../tsconfig.json",
  "references": [{ "path": "../database" }],
  "include": ["src", "*.ts", "package.json"],
 "compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"outDir": "dist",
		"importsNotUsedAsValues": "remove",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vitest/globals"]
	},
}

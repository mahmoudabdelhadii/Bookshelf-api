{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "es2023",
    "lib": [
      "es6",
      "es2023",
      "DOM"
    ],
    "module": "NodeNext",
    "moduleResolution": "nodeNext",
    "rootDirs": [
      "src",
      "scripts"
    ],
    "resolveJsonModule": true,
    "allowJs": false,
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "extends": "expo/tsconfig.base"
}
